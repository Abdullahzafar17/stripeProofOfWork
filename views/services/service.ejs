<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Service</title>
</head>

<body>
  <h1>Create Services</h1>
  <form action="/addProduct" method="POST">
    <div class="form-group">
      <label for="name">Product Name</label>
      <input type="text" class="form-control" id="name" name="productName" placeholder="Enter Product Name">
    </div>

    <div class="form-group">
      <label for="amount">Enter Price For Plan</label>
      <input type="number" id="amount" name="amount" placeholder="Enter Product Name" >
    </div>

    <div>
      <label for="userId">Choose a Provider Account</label>
      <select name="userId" id="userId">
        <% for(var i=0;i<providers.length;i++){ %>
          <option value="<%=  providers[i].id %>">
            <%= providers[i].firstName %>
              <%= providers[i].lastName %>
          </option>
          <% } %>
      </select>
    </div>

    <div>
      <label for="interval">Choose interval</label>
      <select name="interval" id="interval">
        <option value="week">Weekly</option>
        <option value="month">Monthly</option>
        <option value="year">Yearly</option>
      </select>
    </div>

    <div>
      <label for="count">The number of intervals between subscription billings</label>
      <select name="count" id="count">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</body>

</html>